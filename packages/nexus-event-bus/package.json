{
  "name": "nexus-event-bus",
  "version": "0.0.0",
  "description": "Event bus/broker for the IRE Nexus client",
  "author": "keneanung <keneanung@gmail.com>",
  "license": "MIT",
  "repository": "git://github.com/keneanung/nexus-event-bus.git",
  "main": "lib/index.js",
  "devDependencies": {
    "@keneanung/iron-realms-nexus-typings": "^0.1.0",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "acorn": "^8.6.0",
    "eslint": "^8.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jsdoc": "^37.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-webpack-plugin": "^3.1.1",
    "jest": "^27.4.3",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.2",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.6.0",
    "write-pkg": "^5.0.0"
  },
  "scripts": {
    "serve": "webpack serve --mode development",
    "build": "tsc",
    "webpack": "npm test && webpack build --mode development",
    "webpackProd": "npm test && webpack build --mode production",
    "lint": "eslint . --ext .ts",
    "test": "jest --collect-coverage --config jestconfig.json",
    "watchTest": "jest --collect-coverage --config jestconfig.json --watch",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.ts\"",
    "prepublishOnly": "npm test && npm run lint && npm run build",
    "preversion": "npm test && npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "website": "cd website && npm run start",
    "setup": "node ./setup.mjs"
  },
  "files": [
    "lib/**/*",
    "!lib/**/__tests__/*",
    "!lib/webpack/**/*"
  ]
}
