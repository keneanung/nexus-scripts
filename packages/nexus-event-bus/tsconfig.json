{
    "compilerOptions": {
      "outDir": "./lib/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "declaration": true,
      "strict": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "typeRoots": [
        "node_modules/@types",
        "node_modules/@keneanung"
      ]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
       "**/*.spec.ts"
    ]
  }